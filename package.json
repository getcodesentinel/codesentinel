{
  "name": "codesentinel-workspace",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @codesentinel/core build && pnpm --filter @codesentinel/code-graph build && pnpm --filter @codesentinel/git-analyzer build && pnpm --filter @codesentinel/dependency-firewall build && pnpm --filter ./packages/cli dev",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "release": "semantic-release",
    "test": "pnpm -r test",
    "publish:cli": "pnpm --filter ./packages/cli exec npm publish --access public"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.3.3",
    "semantic-release": "^25.0.3",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  }
